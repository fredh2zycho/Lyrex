<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redlab.lyrex"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- SDK versions -->
    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="31" />

    <!-- Camera features for QR scanning -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lyrex_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lyrex" >

        <!-- Splash Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Add/Edit Activity -->
        <activity
            android:name=".AddEditActivity"
            android:exported="false" />

        <!-- Performance Mode Activity -->
        <activity
            android:name=".PerformanceModeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <!-- Setlist Management Activity -->
        <activity
            android:name=".SetlistActivity"
            android:exported="false"
            android:label="Create Setlist" />
        <activity
            android:name=".SetlistManagerActivity"
            android:exported="false"
            android:label="My Setlists" />

        <!-- QR Code Share Activity -->
        <activity
            android:name=".QRShareActivity"
            android:exported="false"
            android:label="Share via QR Code" />

        <!-- QR Code Scanner Activity -->
        <activity
            android:name=".QRScannerActivity"
            android:exported="false"
            android:label="Scan QR Code" />

        <!-- Audio Player Activity -->
        <activity
            android:name=".AudioPlayerActivity"
            android:exported="false"
            android:label="Audio Player"
            android:launchMode="singleInstance"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Lyrex.Translucent"
            android:windowIsFloating="true" />

        <!-- Setlist Viewer Activity -->
        <activity
            android:name=".SetlistViewerActivity"
            android:exported="false"
            android:label="Setlist" />

        <!-- Audio Player Service -->
        <service
            android:name=".AudioPlayerService"
            android:enabled="true"
            android:exported="false" />

        <!-- File Provider for sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.redlab.lyrex.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>