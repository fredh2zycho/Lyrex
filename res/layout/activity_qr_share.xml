<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Share Setlist via QR Code"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qrImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_share_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Scan this QR code with another device to import this setlist"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_save_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Save QR Code" />

    <Button
        android:id="@+id/btn_share_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Image" />

</LinearLayout>